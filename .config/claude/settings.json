{
  "includeCoAuthoredBy": true,
  "permissions": {
    "ask": ["Bash(git push:*)"],
    "allow": [
      "Bash(git diff:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "Read(package.json)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(git rm:*)",
      "Bash(git stash:*)",
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  }
}
