{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": ["view", "ls", "grep", "lsp_references", "lsp_diagnostics", "read_mcp_resource"]
  },
  "tools": {
    "ls": {
      "max_depth": 0,
      "max_items": 500
    }
  },
  "lsp": {
    "go": {
      "command": "gopls",
      "filetypes": ["go", "mod"]
    },
    "typescript": {
      "command": "typescript-language-server",
      "filetypes": ["js", "ts"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"]
    },
    "json": {
      "command": "vscode-json-language-server",
      "args": ["--stdio"]
    },
    "nix": {
      "command": "nil"
    }
  },
  "mcp": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "agent"]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "chrome": {
      "type": "stdio",
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"]
    }
  },
  "options": {
    "initialize_as": "AGENTS.md",
    "disable_metrics": true,
    "disabled_tools": [],
    "attribution": {
      "trailer_style": "co-authored-by",
      "generated_with": false
    }
  }
}
