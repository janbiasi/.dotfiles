{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "z.ai/glm-4.6",
  "autoupdate": true,
  "permission": {
    "edit": "allow",
    "bash": "ask",
    "webfetch": "ask"
  },
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "agent"
      ]
    }
  }
}
