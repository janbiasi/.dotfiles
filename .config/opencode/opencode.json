{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "z.ai/glm-4.6",
  "autoupdate": true,
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "agent"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "chrome": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  }
}
