{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "z.ai/glm-4.6",
  "autoupdate": true,
  "instructions": ["CONTRIBUTING.md", ".cursor/rules/*.md"],
  // "plugin": ["opencode-swarm-plugin"],
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "permission": {
    "*": "ask",
    "skill": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "deny",
    "lsp": "allow",
    "glob": "allow",
    "bash": {
      "*": "ask",
      "find *": "allow",
      "grep *": "allow",
      "git *": "allow",
      "npm *": "allow",
      "pnpm *": "allow",
      "go *": "allow",
      "rm *": "deny",
      "ls *": "allow"
    },
    "read": {
      "*": "allow",
      "*.envrc*": "deny",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "grep": "allow",
    "serena_*": "allow"
  },
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "agent"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "chrome": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  }
}
